<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE policyconfig PUBLIC
 "-//freedesktop//DTD PolicyKit Policy Configuration 1.0//EN"
 "http://www.freedesktop.org/standards/PolicyKit/1.0/policyconfig.dtd">
<policyconfig>
  <vendor/>
  <vendor_url/>
  <icon_name>camera-web</icon_name>

  <action id="nl.boltgolt.Howdy.manage-own-snapshots">
    <description>Add and remove snapshots of self</description>
    <message>Authentication is required to manage face data</message>
    <defaults>
      <allow_any>yes</allow_any>
      <allow_inactive>yes</allow_inactive>
      <allow_active>yes</allow_active>
    </defaults>
  </action>

  <action id="nl.boltgolt.Howdy.manage-any-snapshots">
    <description>Add and remove snapshots for anyone</description>
    <message>Authentication is required manage face data data</message>
    <defaults>
      <allow_any>auth_admin</allow_any>
      <allow_inactive>auth_admin</allow_inactive>
      <allow_active>auth_admin_keep</allow_active>
    </defaults>
  </action>
</policyconfig>
